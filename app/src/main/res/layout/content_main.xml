<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:background="#696A6B"
    >

    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:text="DATOS DEL ARTICULO" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/pdf" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/et1"
        android:layout_width="350dp"
        android:paddingLeft="25dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Ingrese codigo"
        android:drawableLeft="@drawable/codigo"
        android:inputType="number"
        android:background="@drawable/imput"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <EditText
        android:id="@+id/et2"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:ems="10"
        android:paddingLeft="25"
        android:drawableLeft="@drawable/descripcion"
        android:layout_marginLeft="10dp"
        android:hint="Ingrese codigo"
        android:inputType="number"
        android:background="@drawable/botones2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:paddingLeft="25"
        android:layout_marginLeft="10dp"
        android:hint="Ingrese codigo"
        android:inputType="number"
        android:background="@drawable/botones2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:drawableLeft="@drawable/precio"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="30dp"
        android:id="@+id/btn1"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_save_24"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_marginTop="10dp"
        android:text="Consultar codigo"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn3"
        android:layout_marginTop="10dp"
        android:text="Consultar por descripcion"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_marginTop="10dp"
        android:text="Borrar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn5"
        android:layout_marginTop="10dp"
        android:text="Editar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:layout_marginLeft="10dp"
        android:shadowDy="0"
        android:shadowRadius="5"
        />
</androidx.appcompat.widget.LinearLayoutCompat>